<html>
  <body>
    <section class="messages-section">
      <% if (messages.length !== 0) { %> <% messages.map((message) => { %>
      <div class="message-container">
        <p><%= message.username %></p>
        <p><%= message.text %></p>
        <output><%= message.time %></output>
        <button type="button">
          <a href="message/<%= message.id %>">Message details</a>
        </button>
      </div>
      <% }) %> <% } else { %>
      <p>There are no messages!</p>
      <% } %>
    </section>
    <section class="create-new-message">
      <li><a href="/new">Create New Message</a></li>
    </section>
  </body>
</html>
